<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTPLESS Login</title>
    <!-- OTPLESS SDK -->
    <script id="otpless-sdk"
        type="text/javascript"
        data-appid="d6mz3pdt2rg9xqojxafm"
        src="https://otpless.com/v4/auth.js">
    </script>
    <script>
        function otpless(otplessUser) {
            const token = otplessUser.token;
            console.log('User Logged In! Token:', token);
            console.log('User Data:', JSON.stringify(otplessUser));

        // Send user data to Wix using postMessage
        window.parent.postMessage(otplessUser, "*");
        }
    </script>

</head>
<body>
    <div id="otpless-login"></div>
</body>
</html>
